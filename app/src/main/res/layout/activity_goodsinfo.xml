<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.qsjingdong.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_xq_exit"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3"
            android:background="@mipmap/jsbundles_jdreactaftersales_images_back"
            />
        <android.support.design.widget.TabLayout
            android:id="@+id/main_table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            app:tabIndicatorColor="#a000"
            app:tabSelectedTextColor="#000"
            >

        </android.support.design.widget.TabLayout>

        <Button
            android:layout_width="0dp"
            android:id="@+id/btn_xq_share"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:background="@mipmap/jsbundles_jdreactonetreasure_images_evaluate_detail_share_normal"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"
            android:id="@+id/btn_xq_more"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/jsbundles_jdreactaftersales_components_style_images_more"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a000"
        android:layout_alignParentBottom="true"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
</LinearLayout>
