<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/depth23_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="二级数据"
        android:textColor="#000000"
        android:textSize="15dp" />

    <com.sxjs.jd.composition.main.classicfragment.view.MyGridView
        android:id="@+id/depth3_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/depth23_tv"
        android:layout_gravity="center_horizontal"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"></com.sxjs.jd.composition.main.classicfragment.view.MyGridView>
</RelativeLayout>
